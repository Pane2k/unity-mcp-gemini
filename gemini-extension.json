{
  "name": "unity-mcp",
  "description": "Provides tools to interact with the Unity Editor and project C# code.",
  "version": "1.0.0",
  "mcpServers": {
    "unity-mcp": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "${env:os === 'win32' ? env:LOCALAPPDATA + '\\\\UnityMCP\\\\UnityMcpServer\\\\src' : (env:os === 'darwin' ? env:HOME + '/Library/Application Support/UnityMCP/UnityMcpServer/src' : env:HOME + '/.local/share/UnityMCP/UnityMcpServer/src')}",
        "server.py"
      ]
    }
  }
}
